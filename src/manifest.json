{
    "manifest_version": 2,
    "name": "MicroHub",
    "description": "Microsoft Github Theme",
    "version": "1.0.1",
    "icons": {
        "16": "assets/icon.png",
        "48": "assets/icon.png",
        "128": "assets/icon.png"
    },
    "browser_action": {
        "default_icon": "assets/icon.png"
    },
    "content_scripts": [
        {
            "matches": ["*://github.com/*"],
            "js": [
                "jquery.js",
                "clippy.js",
                "microhub.js"
            ],
            "css": [
                "microhub.css"
            ],
            "all_frames": true
        }
    ],
    "permissions": [
        "http://github.com/",
        "https://github.com/"
    ]
}
